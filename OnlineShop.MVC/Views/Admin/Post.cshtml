@using OnlineShop.Service.ViewModels
@model List<AnnouncementViewModel>
@{
    Layout = "_AdminLayout.cshtml";
}

<div class="row g-10 " style="display: flex;justify-content: center">
    @{
        foreach (var product in Model)
        {
            <div class="col-lg-4 card min-h-300px mb-5 me-5" style="width: 270px">
                <div class="mt-5 mb-5">
                    <a asp-controller="announcement" asp-action="announcementId" asp-route-productId="@product.Id">
                    <div class="w-200px h-200px" style="display: flex;justify-content: center">
                        <img src="~/@product.ImagePath" class="card-rounded" width="150" height="150" />
                    </div>
                </a>
                    <div class="text-center">
                        <span class="fs-5 fw-bold text-gray-600">@product.Title</span>
                    </div>
                    <br />
                    @{
                        <span class="svg-icon svg-icon-primary svg-icon-2x">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <rect x="0" y="0" width="24" height="24" />
                                    <path d="M2,6 L21,6 C21.5522847,6 22,6.44771525 22,7 L22,17 C22,17.5522847 21.5522847,18 21,18 L2,18 C1.44771525,18 1,17.5522847 1,17 L1,7 C1,6.44771525 1.44771525,6 2,6 Z M11.5,16 C13.709139,16 15.5,14.209139 15.5,12 C15.5,9.790861 13.709139,8 11.5,8 C9.290861,8 7.5,9.790861 7.5,12 C7.5,14.209139 9.290861,16 11.5,16 Z" fill="#000000" opacity="0.3" transform="translate(11.500000, 12.000000) rotate(-345.000000) translate(-11.500000, -12.000000) " />
